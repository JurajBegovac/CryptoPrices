<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:id="@+id/itemCryptoRoot"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal"
  android:padding="8dp">

  <TextView
    android:id="@+id/itemCryptoRank"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:gravity="center"
    android:text="@string/item_crypto_rank"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/itemCryptoSymbol"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="2"
    android:gravity="center"
    android:text="@string/item_crypto_symbol"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/itemCryptoPrice"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:gravity="center"
    android:text="@string/item_crypto_price"
    android:textSize="14sp" />

  <TextView
    android:id="@+id/itemCryptoVolume24h"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="3"
    android:gravity="center"
    android:text="@string/item_crypto_volume_24h"
    android:textSize="14sp" />
</LinearLayout>
